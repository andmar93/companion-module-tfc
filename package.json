{
  "name": "companion-module-tfc",
  "version": "1.0.3",
  "description": "Companion module for TFC",
  "main": "main.js",
  "type": "commonjs",
  "files": [
    "main.js",
    "companion",
    "LICENSE"
  ],
  "scripts": {
    "format": "prettier -w .",
    "build": "esbuild src/main.ts --bundle --outfile=main.js --format=cjs --platform=node --target=node18 --external:@companion-module/base",
    "dev": "esbuild src/main.ts --bundle --outfile=main.js --format=cjs --platform=node --target=node18 --external:@companion-module/base --watch",
    "package": "npm run build && companion-module-build",
    "lint:raw": "eslint",
    "lint": "run lint:raw ."
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oxe-nep/companion-module-tfc.git"
  },
  "dependencies": {
    "@companion-module/base": "^1.11.3",
    "uuid": "^11.0.5",
    "ws": "^8.11.0"
  },
  "devDependencies": {
    "@companion-module/tools": "^2.1.1",
    "@types/node": "^18.19.0",
    "@types/ws": "^8.5.14",
    "esbuild": "^0.27.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "~5.5.4",
    "typescript-eslint": "^8.18.1"
  },
  "prettier": "@companion-module/tools/.prettierrc.json"
}
